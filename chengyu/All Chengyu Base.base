filters:
  and:
    - file.folder == "chengyu"
views:
  - type: table
    name: Table
    order:
      - file.name
      - characters
      - 韓文
      - english
      - mandarin
      - cantonese
      - japanese
      - korean
      - origin
    sort:
      - property: origin
        direction: DESC
      - property: 韓文
        direction: ASC
    columnSize:
      file.name: 86
      note.characters: 184
      note.韓文: 89
      note.english: 359
